<!DOCTYPE html>
<%- include('partials/header') -%>
<main class="article-main">
  <form
    id="create-article"
    action="/articles/<%= article.id%>/edit"
    method="POST"
  >
    <div class="form-control">
      <label for="text"> title</label>
      <input type="text" name="title" id="" value="<%= article.title%>" />
      <small class="display"></small>
    </div>
    <div class="form-control">
      <label for="text">Description</label>
      <textarea name="description" id="" cols="30" rows="10">
        <%= article.description%></textarea
      >
    </div>

    <div class="form-control">
      <label for="text">tags</label>
      <input type="text" name="tags" id="" value="<%= article.tags%>" />
      <small class="display"></small>
    </div>

    <input type="submit" name="" id="" value="Update Article" />
  </form>
</main>

<%- include('partials/footer') -%>