<%- include('partials/header') -%>

<main class="article-main">
  <form id="create-article" action="/articles" method="POST">
    <div class="form-control">
      <label for="text"> title</label>
      <input type="text" name="title" id="" placeholder="Enter Title" />
      <small class="display"></small>
    </div>
    <div class="form-control">
      <label for="text">Description</label>
      <textarea
        name="description"
        id=""
        cols="20"
        rows="10"
        placeholder="Write Something"
      ></textarea>
    </div>

    <div class="form-control">
      <label for="text">tags</label>
      <input type="text" name="tags" id="" placeholder="add tags" />
      <small class="display"></small>
    </div>

    <button type="submit">Create</button>
  </form>
</main>
<%- include('partials/footer') -%>